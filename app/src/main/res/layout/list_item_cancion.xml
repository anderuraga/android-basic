<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageCancion"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/album"
        android:layout_alignParentBottom="true" />

    <TextView
        style="@style/textoCustom.bold.accent"
        android:text="Titulo Cancion"
        android:id="@+id/tvCancion"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageCancion"
        android:layout_toEndOf="@+id/imageCancion"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Artista"
        android:id="@+id/tvArtista"
        android:layout_below="@+id/tvCancion"
        android:layout_alignLeft="@+id/tvCancion"
        android:layout_alignStart="@+id/tvCancion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:00"
        android:id="@+id/tvDuracion"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>